@using Fluxor
@using Fluxor.Blazor.Web.Components
@using RGS.Frontend.Store.EditSourceResumeDataFeature

@inherits FluxorComponent

<div class="my-4 d-flex flex-column gap-4">
  @foreach (var (book, index) in (State.Value.ResumeData?.Bookshelf.WithIndex() ?? []))
  {
    <div class="d-flex flex-column border p-3 position-relative">
      <Badge style="aspect-ratio: 1 / 1; display: flex; place-items: center" IndicatorType="BadgeIndicatorType.RoundedCircle" Color="BadgeColor.Danger" Position="Position.Absolute" Placement="BadgePlacement.TopLeft" @onclick="@(() => Dispatcher.Dispatch(new RemoveBookAction(index)))">
        <Icon Name="IconName.XLg" />
      </Badge>

      @* // TODO: Figure out a better @key. Index sucks (= broken) and so does book.  *@
      <BookEditor @key="book.id" BookIndex="index" />
    </div>
  }
  <div class="d-flex gap-2 place-items-center">
    <Button Type="ButtonType.Button" Color="ButtonColor.Primary" @onclick="@(() => Dispatcher.Dispatch(new AddBookAction()))">Add Book</Button>
  </div>
</div>

@code {
  [Inject] private IState<EditSourceResumeDataState> State { get; set; } = null!;
  [Inject] private IDispatcher Dispatcher { get; set; } = null!;
}