@using Fluxor
@using Fluxor.Blazor.Web.Components
@using R3
@using RGS.Backend.Shared.ViewModels
@using RGS.Frontend.Store.EditSourceResumeDataFeature
@inherits FluxorComponent

<EditForm EditContext="@EditContext" FormName="EditProject">
  <DataAnnotationsValidator />
  <ValidationSummary />
  <div class="d-flex flex-column gap-4">
    <FormField @bind-Value="@(Model.Name)" class="col-6" Label=@($"Project Name") />
    <FormField @bind-Value="@(Model.Description)" class="col-6" />
    <FormField @bind-Value="@(Model.When)" class="col-6" />
    <div class="d-flex flex-wrap gap-3 ms-3">
      @foreach (var (item, index) in @Model.Technologies.WithIndex())
      {
        <Badge @key="@index" Color="BadgeColor.Success" Position="Position.Relative">@item<Badge style="aspect-ratio: 1 / 1; display: flex; place-items: center" IndicatorType="BadgeIndicatorType.RoundedCircle" Color="BadgeColor.Danger" Position="Position.Absolute" Placement="BadgePlacement.TopLeft" @onclick="@(() => RemoveTechAt(index))">
            <Icon Name="IconName.XLg" />
          </Badge>
        </Badge>
      }
    </div>
    <div class="d-flex gap-2 place-items-center">
      <label for="@newEntryId" class="collapse">Add Technology</label>
      <input id="@newEntryId" type="text" class="col-sm-6 col-md-4 col-lg-3" @bind-value="@NewTechnology" @bind-value:event="oninput" />
      <Button Type="ButtonType.Button" Color="ButtonColor.Primary" disabled="@(NewTechnology is null or "")" @onclick="AddTech">Add Technology</Button>
    </div>
  </div>
</EditForm>

@code {
  private EditContext EditContext { get; set; } = null!;
  [Inject] private IDispatcher Dispatcher { get; set; } = null!;
  [Inject] private IStateSelection<EditSourceResumeDataState, Project?> ProjectSelector { get; set; } = null!;
  [Parameter] public required int ProjectIndex { get; set; }
  public ProjectModel Model { get; set; } = null!;
  private string NewTechnology { get; set; } = "";
  private string newEntryId = Guid.NewGuid().ToString();
  private CompositeDisposable _subscription = new();
  private bool _disposedValue;

  private async Task AddTech()
  {
    Dispatcher.Dispatch(new AddTechAction { Tech = NewTechnology, ProjectIndex = ProjectIndex });
    NewTechnology = "";
  }

  private async Task RemoveTechAt(int index)
  {
    Dispatcher.Dispatch(new RemoveTechAction { TechIndex = index, ProjectIndex = ProjectIndex });
  }

  protected override void OnInitialized()
  {
    base.OnInitialized();

    ProjectSelector.Select(state => state.ResumeData?.Projects[ProjectIndex]);

    Model = new()
    {
      Id = ProjectSelector.Value!.id!,
      Name = ProjectSelector.Value?.Name,
      Description = ProjectSelector.Value?.Description,
      When = ProjectSelector.Value?.When,
      Technologies = [.. ProjectSelector.Value?.Technologies ?? []]
    };

    ProjectSelector.ValueChanges().Subscribe(project =>
    {
      Model?.Name = project?.Name;
      Model?.Description = project?.Description;
      Model?.When = project?.When;
      Model?.Technologies = [.. project?.Technologies ?? []];
      StateHasChanged();
    });

    SubscribeToAction((UpdateResumeDataResultAction action) =>
    {
      if (action.Success)
      {
        EditContext.MarkAsUnmodified();
      }
    });

    EditContext = new EditContext(Model);
    EditContext.Validate();
    Observable.FromEventHandler<FieldChangedEventArgs>(
    a => EditContext.OnFieldChanged += a,
    a => EditContext.OnFieldChanged -= a
    ).Select(args => args.sender as EditContext)
    .WhereNotNull()
    .Where(ec => ec.Validate())
    .Select(ec => (ProjectModel)ec.Model)
    .Subscribe(model =>
    {
      Dispatcher.Dispatch(new UpdateProjectAction(ProjectIndex, new Project(model.Id, model.Name!, model.Description!, [.. model.Technologies], model.When!)));
    })
    .AddTo(_subscription);
  }

  protected override async ValueTask DisposeAsyncCore(bool disposing)
  {
    await base.DisposeAsyncCore(disposing);

    if (!_disposedValue)
    {
      _subscription.Dispose();
    }

    _disposedValue = true;
  }
}