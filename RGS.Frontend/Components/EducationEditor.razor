@using Fluxor
@using Fluxor.Blazor.Web.Components
@using R3
@using RGS.Backend.Shared.ViewModels
@using RGS.Frontend.Store.EditSourceResumeDataFeature
@inherits FluxorComponent

<EditForm EditContext="@EditContext" FormName="EditEducation">
  <DataAnnotationsValidator />
  <ValidationSummary />
  <div class="d-flex flex-column gap-4">
    <FormField @bind-Value="@(Model.Degree)" class="col-6" />
    <FormField @bind-Value="@(Model.School)" class="col-6" />
    <FormField @bind-Value="@(Model.Location)" class="col-6" />
    <FormField @bind-Value="@(Model.Graduation)" class="col-6" />
  </div>
</EditForm>

@code {
  private EditContext EditContext { get; set; } = null!;
  [Inject] private IDispatcher Dispatcher { get; set; } = null!;
  [Parameter] public required Education Education { get; set; }
  [Parameter] public required int EducationIndex { get; set; }
  public EducationModel Model { get; set; } = null!;
  private CompositeDisposable _subscription = new();
  private bool _disposedValue;

  protected override void OnInitialized()
  {
    base.OnInitialized();

    Model = new()
    {
      Degree = Education.Degree,
      School = Education.School,
      Location = Education.Location,
      Graduation = Education.Graduation,
    };

    SubscribeToAction((UpdateResumeDataResultAction action) =>
    {
      if (action.Success)
      {
        EditContext.MarkAsUnmodified();
      }
    });

    EditContext = new EditContext(Model);
    EditContext.Validate();
    Observable.FromEventHandler<FieldChangedEventArgs>(
    a => EditContext.OnFieldChanged += a,
    a => EditContext.OnFieldChanged -= a
    ).Select(args => args.sender as EditContext)
    .WhereNotNull()
    .Where(ec => ec.Validate())
    .Select(ec => (EducationModel)ec.Model)
    .Subscribe(model =>
    {
      Dispatcher.Dispatch(new UpdateEducationAction(EducationIndex, new Education(model.Degree!, model.School!, model.Location!, model.Graduation!)));
    })
    .AddTo(_subscription);
  }

  protected override void OnParametersSet()
  {
    EditContext.Validate();
  }

  protected override async ValueTask DisposeAsyncCore(bool disposing)
  {
    await base.DisposeAsyncCore(disposing);

    if (!_disposedValue)
    {
      _subscription.Dispose();
    }

    _disposedValue = true;
  }
}