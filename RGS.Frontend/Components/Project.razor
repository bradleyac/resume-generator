@using RGS.Backend.Shared.ViewModels
<div>
  <FormField @bind-Value="@(Model.Name)" class="col-3" Label=@($"Skill Category") />
  <div class="mb-3 d-flex flex-wrap gap-3">
    @foreach (var (item, index) in @Model.Technologies.WithIndex())
    {
      <Badge @key="@index" Color="BadgeColor.Success" Position="Position.Relative">@item.Value<Badge style="aspect-ratio: 1 / 1; display: flex; place-items: center" IndicatorType="BadgeIndicatorType.RoundedCircle" Color="BadgeColor.Danger" Position="Position.Absolute" Placement="BadgePlacement.TopLeft" @onclick="() => OnSkillRemoved.InvokeAsync(index)">
          <Icon Name="IconName.XLg" />
        </Badge>
      </Badge>
    }
  </div>
  <div class="d-flex gap-2 place-items-center">
    <label for="@newEntryId" class="collapse">Add Technology</label>
    <input id="@newEntryId" type="text" class="col-sm-6 col-md-4 col-lg-3" @bind-value="@NewTechnology" @bind-value:event="oninput" />
    <Button Type="ButtonType.Button" Color="ButtonColor.Primary" disabled="@(NewTechnology is null or "")" @onclick="@OnClick">Add Technology</Button>
  </div>
</div>

@code {
  [Parameter] public required ProjectModel Model { get; set; }
  [Parameter] public required EventCallback<ProjectModel> ModelChanged { get; set; }
  [Parameter] public required EventCallback<BindableString> OnSkillAdded { get; set; }
  [Parameter] public required EventCallback<int> OnSkillRemoved { get; set; }
  private string NewTechnology { get; set; } = "";
  private string newEntryId = Guid.NewGuid().ToString();

  private async Task OnClick()
  {
    string newSkill = NewTechnology;
    NewTechnology = "";
    await OnSkillAdded.InvokeAsync(new BindableString { Value = newSkill });
  }
}